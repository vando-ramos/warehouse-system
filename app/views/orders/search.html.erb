<h2>Search results for <%= @code %></h2>

<p class='count'><%= t('views.found', count: @orders.count) %></p>

<% if @orders.any? %>
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Responsible User</th>
        <th><%= t('views.warehouse_id') %></th>
        <th><%= t('models.supplier') %></th>
        <th><%= t('attributes.order.expected_delivery_date') %></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.code %></td>
          <td><%= order.user.name %> - <%= order.user.email %></td>
          <td><%= order.warehouse.warehouse_info %></td>
          <td><%= order.supplier.corporate_name %></td>
          <td><%= I18n.localize(order.expected_delivery_date) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No order found</p>
<% end %>