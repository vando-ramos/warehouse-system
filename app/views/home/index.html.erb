<h2><%= t('views.warehouses') %></h2>

<%= link_to t('views.register_warehouse'), new_warehouse_path %>

<% @warehouses.each do |warehouse| %>
  <div class='warehouse-card'>
    <h3><%= link_to warehouse.name, warehouse %></h3>

    <ul>
      <li><strong><%= t('activerecord.attributes.warehouse.code') %>:</strong> <%= warehouse.code %></li>
      <li><strong><%= t('activerecord.attributes.warehouse.city') %>:</strong> <%= warehouse.city %></li>
      <li><strong><%= t('activerecord.attributes.warehouse.area') %>:</strong> <%= warehouse.area %> mÂ²</li>
    </ul>
  </div>
<% end %>

<% if @warehouses.empty? %>
  <p>There are no registered warehouses!</p>
<% end %>