<div class='form-container'>
  <%= form_with model: [@order, @order_item] do |f| %>
    <div>
      <%= f.label :product_model_id %>
      <%= f.collection_select :product_model_id, @product_models, :id, :name %>
      <%= error_message_for(@order_item, :product_model_id) %>
    </div>    
    <div>
      <%= f.label :quantity %>
      <%= f.number_field :quantity %>
      <%= error_message_for(@order_item, :quantity) %>
    </div>
    <div>
      <%= f.submit 'Send' %>
    </div>
  <% end %>
</div>