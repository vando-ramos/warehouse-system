<h2>Suppliers</h2>

<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.supplier.brand_name') %></th>
        <th><%= t('views.location') %></th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= link_to supplier.brand_name , supplier %></td>
        <td><%= supplier.city %> - <%= supplier.state %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no registered suppliers!</p>
<% end %>